{{ 'custom-cta-mobile.css' | asset_url | stylesheet_tag }}



<div class="cta-mobile  color-{{ section.settings.color_scheme }}">
    <div class="cta-left">
        <div class="container">
            {% if section.settings.header %}
                <h1>{{  section.settings.header }}</h1>
            {% endif %}
            {% if section.settings.text %}
                <span>{{ section.settings.text }}</span>
            {% endif %}
            <div class="btns">
                {% if section.settings.google_btn_img %}
                    <a href="{{ section.settings.google_btn_link }}">
                        <img
                          src="{{ section.settings.google_btn_img | image_url: width: 140 }}"
                          alt="{{ section.settings.google_btn_img.alt | escape }}"
                          width="auto"
                          height="auto"
                          loading="lazy"
                        >
                    </a>
                {% endif %}
                {% if section.settings.app_btn_img %}
                    <a href="{{ section.settings.app_btn_link }}">
                        <img
                          src="{{ section.settings.app_btn_img | image_url: width: 140 }}"
                          alt="{{ section.settings.app_btn_img.alt | escape }}"
                          width="auto"
                          height="auto"
                          loading="lazy"
                        >
                    </a>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="cta-right">
        {% if section.settings.bg %}
            <img
                src="{{ section.settings.bg | image_url: width: 1100 }}"
                alt="{{ section.settings.bg.alt | escape }}"
                width="100%"
                height="100%"
                loading="lazy"
            >
        {% endif %}
    </div>
</div>



{% schema %}
    {
        "name": "cta",
        "class": "section",
        "settings": [
            {
                "type": "text",
                "id": "header",
                "label": "Header",
                "default": "Let’s start investment today with Download our App"
            },
            {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:sections.all.colors.label",
            "default": "scheme-1"
            },
            {
                "type": "text",
                "id": "text",
                "label": "text",
                "default": "Lorem ipsum dolor sit amet  conset atetur adipiscing elit, sed do eiusmod tempor incididunt."
            },
            {
                "type": "image_picker",
                "id": "google_btn_img",
                "label": "Button Image 1"
            },
            {
                "type": "url",
                "id": "google_btn_link",
                "label": "Button image"
            },
            {
                "type": "image_picker",
                "id": "app_btn_img",
                "label": "Button Image 1"
            },
            {
                "type": "url",
                "id": "app_btn_link",
                "label": "Button image"
            },
            {
                "type": "image_picker",
                "id": "bg",
                "label": "Bacground Image"
            }
        ],
        "presets": [
            {
                "name": "cta mobile"
            }
        ]
    }
{% endschema %}
